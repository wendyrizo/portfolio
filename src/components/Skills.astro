---
const skills = {
  languages: ["C", "C++"],
  tools: ["Git"],
};
---

<section
  class="mt-12 bg-slate-50/50 border-4 border-black shadow-[6px_6px_0_0_#000] p-6"
>
  <header class="mb-4">
    <h2 class="font-ui text-lg border-b-2 border-black pb-1">INVENTORY</h2>
  </header>

  <div class="space-y-6">
    <div>
      <h3 class="font-ui text-sm mb-2">LANGUAGES</h3>
      <ul class="grid grid-cols-2 sm:grid-cols-3 gap-3">
        {
          skills.languages.map((skill) => (
            <li
              class="flex items-center justify-center h-12 border-2 border-black
                   bg-[#f5f1c6] shadow-[3px_3px_0_0_#000]
                   text-sm font-medium select-none"
            >
              {skill}
            </li>
          ))
        }
      </ul>
    </div>

    <div>
      <h3 class="font-ui text-sm mb-2">TOOLS</h3>
      <ul class="grid grid-cols-2 sm:grid-cols-4 gap-3">
        {
          skills.tools.map((tool) => (
            <li
              class="flex items-center justify-center h-12 border-2 border-black
                   bg-[#e6eef7] shadow-[3px_3px_0_0_#000]
                   text-sm font-medium select-none"
            >
              {tool}
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
